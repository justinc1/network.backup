---
name: Backup Survey
description: Backup Survey
spec:
  - question_name: Backup Type
    question_description: Select the type of backup
    variable: backup_type
    type: multiplechoice
    choices:
      - full
      - differential
    required: true
    default: full

  - question_name: Backup Frequency
    question_description: How often do you want to take backups?
    variable: backup_frequency
    type: multiplechoice
    choices:
      - Hourly
      - Daily
      - Weekly
      - Monthly
    required: true
    default: Daily

  - question_name: Backup Location
    question_description: Enter the location where backups should be stored
    variable: backup_location
    type: text
    required: true
    default: /var/backups/network
